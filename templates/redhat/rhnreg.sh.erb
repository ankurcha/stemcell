#!/bin/bash

set -x

source _variables.sh
echo "Register with RHN ... "

<% if ENV['HTTP_PROXY'] || ENV['http_proxy'] || ENV['https_proxy'] || ENV['HTTPS_PROXY'] %>
rhnreg_ks --nohardware --nopackages --novirtinfo --norhnsd --proxy=`echo $HTTP_PROXY` --username="<%= @rhn_user %>" --password="<%= @rhn_user %>"
<% else %>
rhnreg_ks --nohardware --nopackages --novirtinfo --norhnsd --username="<%= @rhn_user %>" --password="<%= @rhn_user %>"
<% end %>

